var app = angular.module('demoApp');



      var newsletterSchema = [

              {
                "id": "id",
                "label": "id",
                "width": "10%",
                "type": "key",
                "show": false
            }, {
                "id": "date",
                "label": "發送日期",
                "width": "10%",
                "type": "datetime2",
                "show": true
            }, {
                "id": "title",
                "label": "標題",
                "width": "10%",
                "type": "text",
                "show": true
            }, {
                "id": "content",
                "label": "內容",
                "width": "10%",
                "type": "textarea",
                "show": true
            },{
                "id": "status",
                "label": "狀態",
                "width": "10%",
                "type": "select",
                "select":["草稿","測試","已發出"],
                "show": true
            } 

            ];


            var memberSchema = [{
                "id": "id",
                "label": "會員號碼",
                "width": "10%",
                "type": "text",
                "show": true
            }, {
                "id": "name",
                "label": "會員名稱",
                "width": "10%",
                "type": "text",
                "show": true
            }, {
                "id": "mobile",
                "label": "會員電話",
                "width": "10%",
